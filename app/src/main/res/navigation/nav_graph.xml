<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/hoardListFragment">

    <fragment
        android:id="@+id/hoardListFragment"
        android:name="com.example.android.treasurefactory.ui.HoardListFragment"
        android:label="HoardListFragment"
        tools:layout="@layout/layout_hoard_list">
        <action
            android:id="@+id/action_hoardListFragment_to_hoardGeneratorFragment"
            app:destination="@id/hoardGeneratorFragment" />
        <action
            android:id="@+id/hoard_list_to_overview_action"
            app:destination="@id/hoardOverviewFragment">
            <argument
                android:name="selectedHoardID"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_hoardListFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/hoardGeneratorFragment"
        android:name="com.example.android.treasurefactory.ui.HoardGeneratorFragment"
        android:label="HoardGeneratorFragment"
        tools:layout="@layout/layout_generator_fragment"/>

    <fragment
        android:id="@+id/hoardOverviewFragment"
        android:name="com.example.android.treasurefactory.ui.HoardOverviewFragment"
        android:label="HoardViewerFragment"
        tools:layout="@layout/layout_hoard_overview">

        <argument
            android:name="selectedHoardID"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/hoard_overview_to_event_log_action"
            app:destination="@id/hoardEventLogFragment" >
            <argument
                android:name="activeHoardID"
                app:argType="integer"/>
        </action>
        <action
            android:id="@+id/hoard_overview_to_coinage_dialog_action"
            app:destination="@id/coinageEditDialog" >
            <argument
                android:name="activeHoardID"
                app:argType="integer"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/hoardEventLogFragment"
        android:name="com.example.android.treasurefactory.ui.HoardEventLogFragment"
        android:label="HoardEventLogFragment"
        tools:layout="@layout/layout_hoard_event_log">
        <argument
            android:name="activeHoardID"
            app:argType="integer"/>
    </fragment>

    <fragment android:id="@+id/placeholder_settings" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.android.treasurefactory.ui.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/layout_about_page"/>

    <fragment
        android:id="@+id/coinageEditDialog"
        android:name="com.example.android.treasurefactory.ui.CoinageEditDialog"
        android:label="CoinageEditDialog"
        tools:layout="@layout/dialog_coinage_edit">
        <argument
            android:name="activeHoardID"
            app:argType="integer"/>
    </fragment>

</navigation>