<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/hoardListFragment">

    <fragment
        android:id="@+id/hoardListFragment"
        android:name="com.example.android.treasurefactory.ui.HoardListFragment"
        android:label="HoardListFragment"
        tools:layout="@layout/layout_hoard_list">
        <action
            android:id="@+id/action_hoardListFragment_to_hoardGeneratorFragment"
            app:destination="@id/hoardGeneratorFragment" />
        <action
            android:id="@+id/action_hoardListFragment_to_hoardViewerFragment"
            app:destination="@id/viewer_nav_graph">
            <argument
                android:name="selectedHoardID"
                android:defaultValue="0"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_hoardListFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/hoardGeneratorFragment"
        android:name="com.example.android.treasurefactory.ui.HoardGeneratorFragment"
        android:label="HoardGeneratorFragment"
        tools:layout="@layout/layout_generator_fragment"/>

    <fragment android:id="@+id/placeholder_settings" />
    <navigation
        android:id="@+id/viewer_nav_graph"
        android:label="Viewer Navigation Graph"
        app:startDestination="@id/hoardViewerFragment">
        <fragment android:id="@+id/placeholder_uniqueItemList">
            <!--dummied out <action
                android:id="@+id/action_placeholder_uniqueItemList_to_placeholder_uniqueItemDetails"
                app:destination="@id/placeholder_uniqueItemDetails" /> -->
        </fragment>
        <fragment android:id="@+id/placeholder_uniqueItemDetails" />
        <fragment
            android:id="@+id/hoardViewerFragment"
            android:name="com.example.android.treasurefactory.ui.HoardViewerFragment"
            android:label="HoardViewerFragment"
            tools:layout="@layout/layout_hoard_overview">
            <action
                android:id="@+id/action_hoardViewerFragment_to_placeholder"
                app:destination="@id/placeholder_uniqueItemList" />
            <argument
                android:name="selectedHoardID"
                android:defaultValue="0"
                app:argType="integer" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.android.treasurefactory.ui.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/layout_about_page"/>
</navigation>