<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Base value rank:"
            style="@style/detail_overview_label_style" />

        <TextView
            android:id="@+id/details_overview_base_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/details_overview_base_gp"
            android:textAlignment="textEnd"
            tools:text="500000.00"/>

        <TextView
            android:id="@+id/details_overview_base_gp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:layout_marginStart="4sp"
            android:text="@string/ending_gp_label"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="4sp">

        <TextView
            android:text="Original value rank:"
            style="@style/detail_overview_label_style" />

        <TextView
            android:id="@+id/details_overview_original_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/details_overview_original_gp"
            android:textAlignment="textEnd"
            tools:text="1000000.00"/>

        <TextView
            android:id="@+id/details_overview_original_gp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:layout_marginStart="4sp"
            android:text="@string/ending_gp_label"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="4sp">

        <TextView
            android:text="Current value rank:"
            style="@style/detail_overview_label_style" />

        <TextView
            android:id="@+id/details_overview_adjusted_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/details_overview_adjusted_gp"
            android:textAlignment="textEnd"
            tools:text="250000.00"/>

        <TextView
            android:id="@+id/details_overview_adjusted_gp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:layout_marginStart="4sp"
            android:text="@string/ending_gp_label"/>

        <TextView
            android:id="@+id/details_overview_adjustments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:layout_below="@id/details_overview_adjusted_gp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="(adjusted 2 times)"/>

    </RelativeLayout>

</LinearLayout>