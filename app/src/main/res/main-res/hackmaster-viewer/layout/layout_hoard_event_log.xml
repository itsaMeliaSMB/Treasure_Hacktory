<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/hoard_event_log_toolbar"
            style="@style/Widget.Design.AppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_height"
            android:minHeight="4dp"
            app:navigationIcon="@drawable/clipart_back_vector_icon"
            app:buttonGravity="center_vertical"
            app:layout_scrollFlags="noScroll" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hoard_event_log_filter_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="4dp"
            app:cardCornerRadius="0dp"
            android:padding="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_scrollFlags="exitUntilCollapsed"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/hoard_event_log_filter_including_label"
                        android:textStyle="bold|italic"
                        android:textAlignment="center"
                        android:textColor="@color/emerald"/>

                    <TextView
                        android:id="@+id/hoard_event_log_filter_including_values"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:breakStrategy="high_quality"
                        tools:text="Art Object, Gemstone"/>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:background="?attr/colorOnSurface"
                    android:alpha="0.65"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/hoard_event_log_filter_excluding_label"
                        android:textStyle="bold|italic"
                        android:textAlignment="center"
                        android:textColor="@color/scarlet"/>

                    <TextView
                        android:id="@+id/hoard_event_log_filter_excluding_values"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:breakStrategy="high_quality"
                        tools:text="Art Object, Gemstone"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hoard_event_log_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/hoard_event_item"/>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>