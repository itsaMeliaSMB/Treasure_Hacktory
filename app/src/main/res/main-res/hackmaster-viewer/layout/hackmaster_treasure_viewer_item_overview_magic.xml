<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Source:"
            android:layout_marginEnd="4sp"
            style="@style/detail_overview_label_style" />

        <!-- May need a marquee -->
        <TextView
            android:id="@+id/details_overview_source_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:layout_marginStart="4sp"
            tools:text="GameMaster's Guide pg 275"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4sp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/details_overview_xp_label"
                android:text="XP value:"
                android:layout_marginEnd="4sp"
                android:layout_alignParentStart="true"
                style="@style/detail_overview_label_style"/>

            <TextView
                android:id="@+id/details_overview_xp_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/details_overview_xp_label"
                android:gravity="end"
                tools:text="100"/>

        </RelativeLayout>

        <!-- Horizontal spacer -->
        <View
            android:layout_height="match_parent"
            android:layout_width="24dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/details_overview_gp_label"
                android:text="GP value:"
                android:layout_marginEnd="4sp"
                android:layout_alignParentStart="true"
                style="@style/detail_overview_label_style"/>

            <TextView
                android:id="@+id/details_overview_gp_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/details_overview_gp_label"
                android:gravity="end"
                tools:text="100"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>