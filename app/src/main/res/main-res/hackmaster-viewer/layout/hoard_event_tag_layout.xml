<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hoard_event_tag_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/shape_stadium"
    tools:backgroundTint="@color/silver"
    android:backgroundTintMode="src_atop"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/hoard_event_tag_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        tools:src="@drawable/clipart_staff_vector_icon"
        android:alpha="1"
        app:tint="?attr/colorOnSecondary" />

    <TextView
        android:id="@+id/hoard_event_tag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:alpha="1"
        tools:text="Tag" />

</LinearLayout>