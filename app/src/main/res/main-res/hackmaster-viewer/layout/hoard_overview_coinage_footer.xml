<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hoard_overview_coinage_footer"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp">

    <View
        android:id="@+id/hoard_overview_coinage_footer_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.75"
        android:background="?attr/colorOnSurface"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="28dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/item_coin_pile"/>

        <TextView
            android:id="@+id/hoard_overview_coinage_footer_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.25"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            tools:text="Coinage Totals"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorOnSurface"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/hoard_overview_coinage_footer_column_qty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="viewEnd"
            android:paddingHorizontal="2dp"
            android:gravity="end|center_vertical"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed"
            android:text="x [ . . . ]"
            android:background="?attr/backgroundColor"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorOnSurface"
            android:alpha="0.25"/>

        <TextView
            android:id="@+id/hoard_overview_coinage_footer_column_wt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingHorizontal="2dp"
            android:textAlignment="viewEnd"
            android:gravity="end|center_vertical"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed"
            android:text="[ . . . ] ib"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorOnSurface"
            android:alpha="0.25"/>

        <TextView
            android:id="@+id/hoard_overview_coinage_footer_column_gp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="viewEnd"
            android:paddingHorizontal="2dp"
            android:gravity="end|center_vertical"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed"
            tools:text="xx,xxx,xxx.xx gp"
            android:background="?attr/backgroundColor"/>

    </LinearLayout>
</LinearLayout>