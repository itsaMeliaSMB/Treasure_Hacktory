<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:background="?attr/colorSurface">

    <ImageView
        android:id="@+id/potion_example_icon_1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/clipart_potion_vector_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/potion_example_vert_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:tint="@color/white" />

    <TextView
        android:id="@+id/potion_example_label_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="2dp"
        android:paddingEnd="8dp"
        android:shadowColor="#90494949"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="0.5"
        android:textColor="?attr/colorOnSurface"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@id/potion_example_icon_1"
        app:layout_constraintStart_toEndOf="@id/potion_example_vert_guideline"
        app:layout_constraintTop_toTopOf="@id/potion_example_icon_1"
        tools:text="White (#000000)"
        tools:textColor="@color/white" />

    <ImageView
        android:id="@+id/potion_example_drop_shadow_1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/clipart_potion_vector_icon"
        app:layout_constraintStart_toStartOf="@id/potion_example_icon_1"
        app:layout_constraintTop_toTopOf="@id/potion_example_icon_1"
        app:tint="#90494949" />

    <ImageView
        android:id="@+id/potion_example_icon_2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:elevation="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/clipart_potion_vector_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/potion_example_vert_guideline"
        app:layout_constraintTop_toBottomOf="@id/potion_example_icon_1"
        tools:tint="@color/pitch_black" />

    <TextView
        android:id="@+id/potion_example_label_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="2dp"
        android:paddingEnd="8dp"
        android:shadowColor="#90494949"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="0.5"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@id/potion_example_icon_2"
        app:layout_constraintStart_toEndOf="@id/potion_example_vert_guideline"
        app:layout_constraintTop_toTopOf="@id/potion_example_icon_2"
        tools:text="Pitch black (#000000)"
        tools:textColor="@color/pitch_black" />

    <ImageView
        android:id="@+id/potion_example_drop_shadow_2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/clipart_potion_vector_icon"
        app:layout_constraintStart_toStartOf="@id/potion_example_icon_2"
        app:layout_constraintTop_toTopOf="@id/potion_example_icon_2"
        app:tint="#90494949" />

    <ImageView
        android:id="@+id/potion_example_icon_3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:elevation="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/clipart_potion_vector_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/potion_example_vert_guideline"
        app:layout_constraintTop_toBottomOf="@id/potion_example_icon_2"
        tools:tint="@color/ultramarine" />

    <TextView
        android:id="@+id/potion_example_label_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        android:paddingEnd="8dp"
        android:shadowColor="#90494949"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="0.5"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@id/potion_example_icon_3"
        app:layout_constraintStart_toEndOf="@id/potion_example_vert_guideline"
        app:layout_constraintTop_toTopOf="@id/potion_example_icon_3"
        tools:text="Ultramarine (#29397b)"
        tools:textColor="@color/ultramarine" />

    <ImageView
        android:id="@+id/potion_example_drop_shadow_3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/clipart_potion_vector_icon"
        app:layout_constraintStart_toStartOf="@id/potion_example_icon_3"
        app:layout_constraintTop_toTopOf="@id/potion_example_icon_3"
        app:tint="#90494949" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/potion_example_vert_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>