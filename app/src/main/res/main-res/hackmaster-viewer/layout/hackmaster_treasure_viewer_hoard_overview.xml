<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/treasure_viewer_overview_hoard_icon"
            android:layout_width="@dimen/hoard_icon_size"
            android:layout_height="@dimen/hoard_icon_size"
            tools:src="@drawable/artwork_painting"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/treasure_viewer_overview_hoard_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="#00FFFFFF"
            android:text="[Hoard Name]"
            />

        <CheckBox
            android:id="@+id/treasure_viewer_overview_hoard_fav_checkbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:buttonTint="?attr/colorOnSurface"
            android:button="@drawable/toggleable_clipart_star_vector" />
        <!--TODO Convert to imageview and remove logic in View layer-->

        <ImageButton
            android:id="@+id/treasure_viewer_header_edit_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:backgroundTint="?attr/colorPrimary"
            android:src="@drawable/clipart_edit_vector_icon"
            app:tint="?attr/colorOnPrimary"/>
        <!-- TODO: add data binding to fav icon and hoard name -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/treasure_viewer_overview_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="@string/time_date_gen_label"/>

        <TextView
            android:id="@+id/treasure_viewer_overview_time_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:text="XX/XX/XXXX at XX:XX:XX PM"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/treasure_viewer_overview_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="@string/hoard_type_label"/>

        <TextView
            android:id="@+id/treasure_viewer_overview_type_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="[A x1 , B x1, J x2, N x1]]"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/treasure_viewer_overview_value_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Total value:"/>

        <TextView
            android:id="@+id/treasure_viewer_overview_value_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="[ . . . ] gp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="96dp"
        android:layout_marginBottom="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Coinage totals"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/treasure_viewer_coinage_edit_button"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:backgroundTint="?attr/colorPrimary"
            android:src="@drawable/clipart_edit_vector_icon"
            app:tint="?attr/colorOnPrimary" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        tools:itemCount="7"
        tools:listitem="@layout/hackmaster_treasure_viewer_coinage_list_item"
        tools:="@layout/hackmaster_treasure_viewer_coinage_footer"/>
    <include layout="@layout/hackmaster_treasure_viewer_coinage_footer"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="96dp"
        android:layout_marginBottom="4dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Unique Object Overview"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/treasure_viewer_overview_leftover_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:src="@drawable/clipart_treasure_vector_icon"
            app:tint="?attr/colorPrimary" />

    </RelativeLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="4dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/colorPrimary">

                <ImageView
                    android:id="@+id/treasure_viewer_overview_gem_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/clipart_gem_vector_icon"
                    app:tint="?attr/colorOnPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    tools:text="100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:breakStrategy="simple"
                    android:textColor="?attr/colorOnPrimary"
                    android:text="Gem stones"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="4dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/colorPrimary">

                <ImageView
                    android:id="@+id/treasure_viewer_overview_art_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/clipart_painting_vector_icon"
                    app:tint="?attr/colorOnPrimary"/>

                <TextView
                    android:id="@+id/treasure_viewer_overview_art_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:drawablePadding="4dp"
                    tools:text="100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:breakStrategy="simple"
                    android:textColor="?attr/colorOnPrimary"
                    android:text="Art Objects"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="4dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/colorPrimary">

                <ImageView
                    android:id="@+id/treasure_viewer_overview_magic_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/clipart_wand_vector_icon"
                    app:tint="?attr/colorOnPrimary"/>

                <TextView
                    android:id="@+id/treasure_viewer_overview_magic_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    tools:text="100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnPrimary"
                    android:text="Magic Items"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="4dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/colorPrimary">

                <ImageView
                    android:id="@+id/treasure_viewer_overview_spells_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/clipart_spellbook_vector_icon"
                    app:tint="?attr/colorOnPrimary"/>

                <TextView
                    android:id="@+id/treasure_viewer_overview_spells_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    tools:text="100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:breakStrategy="simple"
                    android:textColor="?attr/colorOnPrimary"
                    android:text="Spell Caches"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>