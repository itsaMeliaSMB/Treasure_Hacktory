<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/add_hoard_event_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_height"
            android:minHeight="4dp"
            app:layout_scrollFlags="noScroll"
            app:title="@string/action_add_user_event"
            app:navigationIcon="@drawable/clipart_close_vector_icon"
            app:buttonGravity="center_vertical"
            android:background="?attr/colorSurface"
            tools:menu="@menu/add_hoard_event_menu"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:orientation="vertical"
            android:background="?attr/colorSurface">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_event_desc_input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:counterEnabled="true"
                app:counterMaxLength="280"
                app:layout_constraintTop_toBottomOf="@id/hoard_edit_name_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_event_desc_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:breakStrategy="balanced"
                    android:minHeight="160dp"
                    android:hint="@string/description"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLength="280" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:text="Tags:"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:rowOrderPreserved="false"
                android:rowCount="8"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_art_object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_painting_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Art Object"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_coinage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_coinbag_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Coinage"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_creation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_new_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Creation"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_deletion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_delete_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Deletion"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_duplication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_copy_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Duplication"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_gemstone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_gem_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Gemstone"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_homebrew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_house_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Homebrew"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_magic_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_magicwand_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Magic Item"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_map_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Map"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_merge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_merge_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Merge"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_modification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_edit_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Modification"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:checked="true"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_extranotes_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Note"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_reroll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_rolling_dice_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Reroll"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_sale_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Sale"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_spell_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_spellbook_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Spell collection"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/user_tag_verbose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorOnBackground"
                        android:src="@drawable/clipart_info_vector_icon"
                        android:alpha="0.65"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="Verbose"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:alpha="0.65"/>

                </LinearLayout>

            </GridLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>