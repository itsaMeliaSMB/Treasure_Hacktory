<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/hackmaster_gen_magic_potion_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/hackmaster_gen_magic_potion_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Potions, Oils, etc."/>

        <Button
            android:id="@+id/hackmaster_gen_potion_quantity_decrement"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/hackmaster_gen_potion_quantity_counter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="-"/>

        <EditText

            android:id="@+id/hackmaster_gen_potion_quantity_counter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/hackmaster_gen_potion_quantity_increment"
            android:background="#E0E0E0"
            android:inputType="number"
            android:minWidth="56dp"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:text="0" />

        <Button
            android:id="@+id/hackmaster_gen_potion_quantity_increment"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="+"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hackmaster_gen_magic_scroll_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <TextView
            android:id="@+id/hackmaster_gen_magic_scroll_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Scrolls"/>

        <Button
            android:id="@+id/hackmaster_gen_scroll_quantity_decrement"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/hackmaster_gen_scroll_quantity_counter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="-"/>

        <EditText

            android:id="@+id/hackmaster_gen_scroll_quantity_counter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/hackmaster_gen_scroll_quantity_increment"
            android:minWidth="56dp"
            android:background="#E0E0E0"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="0"/>

        <Button
            android:id="@+id/hackmaster_gen_scroll_quantity_increment"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="+"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hackmaster_gen_scroll_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hackmaster_gen_scrolls_allowed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Allowed scroll types:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="96dp">

            <CheckBox
                android:id="@+id/hackmaster_gen_scroll_checkbox_arcane"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:checked="true"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="Magic-User (Arcane)"/>

            <CheckBox
                android:id="@+id/hackmaster_gen_scroll_checkbox_divine"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:checked="true"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="Cleric/Zealot (Divine)"/>

            <CheckBox
                android:id="@+id/hackmaster_gen_scroll_checkbox_non_spell"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:checked="true"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="Protection/Non-spell"/>

            <CheckBox
                android:id="@+id/hackmaster_gen_scroll_checkbox_map"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:checked="false"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="Treasure Maps"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hackmaster_gen_scroll_level_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/hackmaster_gen_scrolls_level_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Spell level range:"/>

        <Spinner
            android:id="@+id/hackmaster_gen_scrolls_level_min"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/hackmaster_gen_scrolls_level_seperator"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/hackmaster_gen_scrolls_level_seperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/hackmaster_gen_scrolls_level_max"
            android:text=" to "/>

        <Spinner
            android:id="@+id/hackmaster_gen_scrolls_level_max"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hackmaster_gen_magic_gear_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <TextView
            android:id="@+id/hackmaster_gen_magic_gear_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Armor/Weapons"/>

        <Button
            android:id="@+id/hackmaster_gen_gear_quantity_decrement"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/hackmaster_gen_gear_quantity_counter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="-"/>

        <EditText

            android:id="@+id/hackmaster_gen_gear_quantity_counter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/hackmaster_gen_gear_quantity_increment"
            android:minWidth="56dp"
            android:background="#E0E0E0"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="0"/>

        <Button
            android:id="@+id/hackmaster_gen_gear_quantity_increment"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="+"/>

    </RelativeLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/hackmaster_gen_gear_flavor_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:checked="true"
        android:text="Allow intelligent weapons"/>

    <RelativeLayout
        android:id="@+id/hackmaster_gen_magic_any_but_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp">

        <TextView
            android:id="@+id/hackmaster_gen_magic_any_but_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Any BUT Weapons"/>

        <Button
            android:id="@+id/hackmaster_gen_any_but_quantity_decrement"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/hackmaster_gen_any_but_quantity_counter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="-"/>

        <EditText

            android:id="@+id/hackmaster_gen_any_but_quantity_counter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/hackmaster_gen_any_but_quantity_increment"
            android:minWidth="56dp"
            android:background="#E0E0E0"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="0"/>

        <Button
            android:id="@+id/hackmaster_gen_any_but_quantity_increment"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="+"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hackmaster_gen_magic_any_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp">

        <TextView
            android:id="@+id/hackmaster_gen_magic_any_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Any Magic Items"/>

        <Button
            android:id="@+id/hackmaster_gen_any_quantity_decrement"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/hackmaster_gen_any_quantity_counter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="-"/>

        <EditText

            android:id="@+id/hackmaster_gen_any_quantity_counter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/hackmaster_gen_any_quantity_increment"
            android:minWidth="56dp"
            android:background="#E0E0E0"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="0"/>

        <Button
            android:id="@+id/hackmaster_gen_any_quantity_increment"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="+"/>

    </RelativeLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/hackmaster_gen_artifact_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:checked="false"
        android:text="Allow artifacts and relics"/>

</LinearLayout>