<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hackmaster_gen_object_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="@string/hackmaster_gen_gem_quantity_label"/>

    <LinearLayout
        android:id="@+id/hackmaster_gen_object_quantity_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <Button
            android:id="@+id/hackmaster_gen_object_quantity_decrement"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="-"
            />

        <EditText
            android:id="@+id/hackmaster_gen_object_quantity_counter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:minWidth="56dp"
            android:background="#E0E0E0"
            android:inputType="number"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="0"/>


        <Button
            android:id="@+id/hackmaster_gen_object_quantity_increment"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="+"
            />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/hackmaster_gen_object_min_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/hackmaster_gen_object_min_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:text="Minimum Value"/>

        <Spinner
            android:id="@+id/hackmaster_gen_object_min_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#E0E0E0"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hackmaster_gen_object_max_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp">

        <TextView
            android:id="@+id/hackmaster_gen_object_max_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Maximum Value"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/hackmaster_gen_object_max_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#E0E0E0"
            android:textSize="16sp"/>

    </RelativeLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/hackmaster_gen_art_map_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:checked="false"
        android:text="Maps can replace paper art"/>


</LinearLayout>