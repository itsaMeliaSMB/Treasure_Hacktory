<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/generator_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/generator_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/hoard_name_label"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/generator_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="@string/hoard_name_entry_hint"
            android:maxLines="1" />

        <TextView
            android:id="@+id/generator_method_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/hoard_gen_label"
            android:textAllCaps="true" />

        <RadioGroup
            android:id="@+id/generator_method_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/generator_method_lettercode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:paddingStart="8dp"
                android:text="@string/gen_method_letter_label"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/generator_method_specific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:text="@string/gen_method_specific_label"
                android:textAllCaps="true" />

        </RadioGroup>

        <ViewAnimator
            android:id="@+id/generator_animator_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="8dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <ScrollView
                android:id="@+id/generator_specific_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/generator_coinage_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                                                app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Top of cardview (always visible) -->
                            <RelativeLayout
                                android:id="@+id/generator_coinage_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/colorPrimary"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="12dp">

                                <ImageView
                                    android:id="@+id/generator_coinage_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:src="@drawable/clipart_indicator_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    style="@style/letter_cardview_header"
                                    android:layout_alignTop="@id/generator_coinage_indicator"
                                    android:layout_alignBottom="@id/generator_coinage_indicator"
                                    android:layout_toEndOf="@id/generator_coinage_indicator"
                                    android:text="@string/specific_coinage_cardview_header" />

                                <ImageView
                                    style="@style/cardview_letter_header_icon"
                                    android:src="@drawable/clipart_coinbag_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                            </RelativeLayout>

                            <!-- Expandable portion of cardview -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/generator_coinage_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/generator_coinage_range_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/generator_coinage_range_label"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/generator_coinage_minimum_input"/>

                                <androidx.constraintlayout.widget.Barrier
                                    android:id="@+id/generator_coinage_barrier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:barrierDirection="end"
                                    app:constraint_referenced_ids="generator_coinage_range_label" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/generator_coinage_minimum_input"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/generator_coinage_barrier"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginHorizontal="8dp"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:hint="@string/generator_coinage_minimum_input_hint">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/generator_coinage_minimum_edit"
                                        android:inputType="numberDecimal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textAlignment="viewEnd"
                                        tools:text="0.00"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/generator_coinage_maximum_input"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/generator_coinage_minimum_input"
                                    app:layout_constraintStart_toEndOf="@id/generator_coinage_barrier"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginHorizontal="8dp"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:hint="Maximum (in gp)">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/generator_coinage_maximum_edit"
                                        android:inputType="numberDecimal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textAlignment="viewEnd"
                                        tools:text="0.00"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:id="@+id/generator_coinage_allowed_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/generator_coinage_allowed_label"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/generator_coinage_maximum_input" />

                                <CheckBox
                                    android:id="@+id/generator_coinage_allowed_cp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="cp"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toStartOf="@+id/generator_coinage_allowed_sp"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintHorizontal_chainStyle="packed"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/generator_coinage_allowed_label" />

                                <CheckBox
                                    android:id="@+id/generator_coinage_allowed_sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="sp"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toStartOf="@+id/generator_coinage_allowed_ep"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/generator_coinage_allowed_cp"
                                    app:layout_constraintTop_toBottomOf="@id/generator_coinage_allowed_label" />

                                <CheckBox
                                    android:id="@+id/generator_coinage_allowed_ep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="ep"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toStartOf="@+id/generator_coinage_allowed_gp"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/generator_coinage_allowed_sp"
                                    app:layout_constraintTop_toBottomOf="@id/generator_coinage_allowed_label" />

                                <CheckBox
                                    android:id="@+id/generator_coinage_allowed_gp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="gp"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toStartOf="@+id/generator_coinage_allowed_hsp"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/generator_coinage_allowed_ep"
                                    app:layout_constraintTop_toBottomOf="@id/generator_coinage_allowed_label" />

                                <CheckBox
                                    android:id="@+id/generator_coinage_allowed_hsp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="hsp"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toStartOf="@+id/generator_coinage_allowed_pp"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/generator_coinage_allowed_gp"
                                    app:layout_constraintTop_toBottomOf="@id/generator_coinage_allowed_label" />

                                <CheckBox
                                    android:id="@+id/generator_coinage_allowed_pp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="pp"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/generator_coinage_allowed_hsp"
                                    app:layout_constraintTop_toBottomOf="@id/generator_coinage_allowed_label" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/generator_gem_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Top of cardview (always visible) -->
                            <RelativeLayout
                                android:id="@+id/generator_gem_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/colorPrimary"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="12dp">

                                <ImageView
                                    android:id="@+id/generator_gem_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:src="@drawable/clipart_indicator_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    style="@style/letter_cardview_header"
                                    android:layout_alignTop="@id/generator_gem_indicator"
                                    android:layout_alignBottom="@id/generator_gem_indicator"
                                    android:layout_toEndOf="@id/generator_gem_indicator"
                                    android:text="@string/specific_gem_cardview_header" />

                                <ImageView
                                    style="@style/cardview_letter_header_icon"
                                    android:src="@drawable/clipart_gem_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                            </RelativeLayout>

                            <!-- Expandable portion of cardview -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/generator_gem_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/generator_gem_qty_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/generator_qty_to_gen_label"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBaseline_toBaselineOf="@id/generator_gem_qty_input"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/generator_gem_qty_input"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="8dp"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="number"
                                        android:textSize="18sp"
                                        android:textAlignment="center"
                                        android:text="0"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:id="@+id/generator_gem_bias_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/generator_gem_bias_label"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBaseline_toBaselineOf="@id/generator_gem_minimum_input"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <androidx.constraintlayout.widget.Barrier
                                    android:id="@+id/generator_gem_bias_barrier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:barrierDirection="end"
                                    app:constraint_referenced_ids="generator_gem_bias_label,generator_gem_qty_label" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/generator_gem_minimum_input"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                    android:layout_width="0dp"
                                    android:minWidth="88dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toEndOf="@id/generator_gem_bias_barrier"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/generator_gem_qty_input"
                                    android:hint="@string/hint_minimum"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="16dp">


                                    <!--https://material.io/components/menus/android#dropdown-menus-->
                                    <!--TODO Add layout resource for dropdown items-->
                                    <AutoCompleteTextView
                                        android:id="@+id/generator_gem_minimum_auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="none"

                                        tools:text="Don't Care"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/generator_gem_maximum_input"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                    android:layout_width="0dp"
                                    android:minWidth="88dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toEndOf="@id/generator_gem_bias_barrier"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/generator_gem_minimum_input"
                                    android:hint="@string/hint_maximum"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="16dp"
                                    android:paddingBottom="16dp">

                                    <AutoCompleteTextView
                                        android:id="@+id/generator_gem_maximum_auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="none"
                                        tools:text="Don't Care"/>

                                </com.google.android.material.textfield.TextInputLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/generator_art_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Top of cardview (always visible) -->
                            <RelativeLayout
                                android:id="@+id/generator_art_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/colorPrimary"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="12dp">

                                <ImageView
                                    android:id="@+id/generator_art_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:src="@drawable/clipart_indicator_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    style="@style/letter_cardview_header"
                                    android:layout_alignTop="@id/generator_art_indicator"
                                    android:layout_alignBottom="@id/generator_art_indicator"
                                    android:layout_toEndOf="@id/generator_art_indicator"
                                    android:text="@string/specific_art_cardview_header" />

                                <ImageView
                                    style="@style/cardview_letter_header_icon"
                                    android:src="@drawable/clipart_painting_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                            </RelativeLayout>

                            <!-- Expandable portion of cardview -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/generator_art_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/generator_art_qty_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/generator_qty_to_gen_label"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBaseline_toBaselineOf="@id/generator_art_qty_input"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/generator_art_qty_input"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="8dp"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/generator_art_qty_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="number"
                                        android:textSize="18sp"
                                        android:textAlignment="center"
                                        android:text="0"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:id="@+id/generator_art_bias_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/generator_gem_bias_label"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBaseline_toBaselineOf="@id/generator_art_minimum_input"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <androidx.constraintlayout.widget.Barrier
                                    android:id="@+id/generator_art_bias_barrier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:barrierDirection="end"
                                    app:constraint_referenced_ids="generator_art_bias_label,generator_art_qty_label" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/generator_art_minimum_input"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                    android:layout_width="0dp"
                                    android:minWidth="88dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toEndOf="@id/generator_art_bias_barrier"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/generator_art_qty_input"
                                    android:hint="@string/hint_minimum"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="16dp">

                                    <AutoCompleteTextView
                                        android:id="@+id/generator_art_minimum_auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="none"
                                        tools:text="Don't Care"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/generator_art_maximum_input"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                    android:layout_width="0dp"
                                    android:minWidth="88dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toEndOf="@id/generator_art_bias_barrier"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/generator_art_minimum_input"
                                    android:hint="@string/hint_maximum"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="16dp">

                                    <AutoCompleteTextView
                                        android:id="@+id/generator_art_maximum_auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="none"
                                        tools:text="Don't Care"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/generator_art_switch_maps"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toBottomOf="@id/generator_art_maximum_input"
                                    android:layout_marginHorizontal="8dp"
                                    android:layout_marginTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/maps_can_replace_paper_art"
                                    android:textStyle="italic"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!--TODO add Magic Items card-->

                    <!--TODO potentially add Spell Collections card-->

                </LinearLayout>

            </ScrollView>

            <!--TODO switch scrollviews back around and enter correct visibilities-->

            <ScrollView
                android:id="@+id/generator_lettercode_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/generator_lair_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/exlist_bottom_margin"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Top of cardview (always visible) -->
                            <RelativeLayout
                                android:id="@+id/generator_lair_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/colorPrimary"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="12dp">

                                <ImageView
                                    android:id="@+id/generator_lair_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:src="@drawable/clipart_indicator_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    style="@style/letter_cardview_header"
                                    android:layout_alignTop="@id/generator_lair_indicator"
                                    android:layout_alignBottom="@id/generator_lair_indicator"
                                    android:layout_toEndOf="@id/generator_lair_indicator"
                                    android:text="@string/lair_treasures_cardview_header" />

                                <ImageView
                                    style="@style/cardview_letter_header_icon"
                                    android:src="@drawable/clipart_fortress_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                            </RelativeLayout>

                            <!-- Expandable portion of cardview -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/generator_lair_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/generator_small_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/exlist_bottom_margin"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Top of cardview (always visible) -->
                            <RelativeLayout
                                android:id="@+id/generator_small_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/colorPrimary"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="12dp">

                                <ImageView
                                    android:id="@+id/generator_small_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:src="@drawable/clipart_indicator_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                                <TextView
                                    style="@style/letter_cardview_header"
                                    android:layout_alignTop="@id/generator_small_indicator"
                                    android:layout_alignBottom="@id/generator_small_indicator"
                                    android:layout_toEndOf="@id/generator_small_indicator"
                                    android:text="@string/small_treasures_cardview_header" />

                                <ImageView
                                    style="@style/cardview_letter_header_icon"
                                    android:src="@drawable/clipart_orc_vector_icon"
                                    app:tint="?attr/colorOnPrimary" />

                            </RelativeLayout>

                            <!-- Expandable portion of cardview -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/hackmaster_gen_small_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

            <!--TODO: Decide if specific quantity method will use dialogs or exlists-->

        </ViewAnimator>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/generator_reset_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="24dp"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:padding="8dp"
                android:text="@string/reset"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/generator_generate_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:padding="8dp"
                android:text="@string/generate"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>