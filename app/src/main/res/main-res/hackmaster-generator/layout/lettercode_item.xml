<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/lettercode_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/lettercode_item_infodot"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Type A" />

    <ImageView
        android:id="@+id/lettercode_item_infodot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clipart_info_vector_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lettercode_item_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:id="@+id/lettercode_item_decrement_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lettercode_item_counter"
        app:layout_constraintStart_toStartOf="@id/lettercode_item_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/lettercode_item_counter"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:minWidth="56dp"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/lettercode_item_decrement_button"
        app:layout_constraintEnd_toStartOf="@+id/lettercode_item_increment_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lettercode_item_decrement_button"
        app:layout_constraintTop_toTopOf="@+id/lettercode_item_decrement_button"
        tools:text="1000"
        app:letterQuantity="@{}"/>

    <Button
        android:id="@+id/lettercode_item_increment_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lettercode_item_counter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>