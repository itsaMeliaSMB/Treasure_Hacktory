<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/hackmaster_list_object_number"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="100"/>

    <ImageView
        android:id="@+id/hackmaster_list_object_icon"
        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="@dimen/list_item_icon_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/hackmaster_list_object_number"
        android:layout_marginHorizontal="@dimen/list_item_element_margin"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/clipart_info_vector_icon"/>

    <!-- Might need to add marquee -->
    <TextView
        android:id="@+id/hackmaster_list_object_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginHorizontal="@dimen/list_item_element_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hackmaster_list_object_label_gp"
        app:layout_constraintStart_toEndOf="@id/hackmaster_list_object_icon"
        android:textSize="16sp"
        tools:text="[object name]"/>

    <TextView
        android:id="@+id/hackmaster_list_object_label_gp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/list_item_element_margin"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_list_object_label_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/hackmaster_list_object_icon"
        android:textSize="14sp"
        tools:text="45000 gp"/>

    <TextView
        android:id="@+id/hackmaster_list_object_label_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_list_object_label_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/hackmaster_list_object_label_gp"
        android:textSize="14sp"
        tools:text="(15000 xp)"/>

    <ImageView
        android:id="@+id/hackmaster_list_object_note_icon"
        android:layout_width="@dimen/list_item_subicon_size"
        android:layout_height="@dimen/list_item_subicon_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/list_item_element_margin"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/clipart_extranotes_vector_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>