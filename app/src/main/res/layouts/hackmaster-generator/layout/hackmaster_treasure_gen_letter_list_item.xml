<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/treasure_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/treasure_type_info"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Type A" />

    <ImageView
        android:id="@+id/treasure_type_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clipart_info_vector_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/treasure_type_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:id="@+id/treasure_type_decrement_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/treasure_type_counter"
        app:layout_constraintStart_toStartOf="@id/treasure_type_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/treasure_type_counter"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:minWidth="56dp"
        android:background="#E0E0E0"
        android:inputType="number"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/treasure_type_decrement_button"
        app:layout_constraintEnd_toStartOf="@+id/treasure_type_increment_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/treasure_type_decrement_button"
        app:layout_constraintTop_toTopOf="@+id/treasure_type_decrement_button"
        tools:text="1"/>

    <Button
        android:id="@+id/treasure_type_increment_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/treasure_type_counter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>