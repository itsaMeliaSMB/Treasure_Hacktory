<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hackmaster_gen_coinage_range_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Range of hard coinage:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hackmaster_gen_coinage_range_min"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/hackmaster_gen_coinage_range_dash"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_range_label"
        android:inputType="numberDecimal"
        android:hint="Minimum"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/hackmaster_gen_coinage_range_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        app:layout_constraintBottom_toBottomOf="@+id/hackmaster_gen_coinage_range_min"
        app:layout_constraintEnd_toStartOf="@+id/hackmaster_gen_coinage_range_max"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hackmaster_gen_coinage_range_min"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_range_label"
        app:layout_constraintTop_toTopOf="@+id/hackmaster_gen_coinage_range_min" />

    <EditText
        android:id="@+id/hackmaster_gen_coinage_range_max"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/hackmaster_gen_coinage_range_dash"
        app:layout_constraintEnd_toStartOf="@+id/hackmaster_gen_coinage_range_gp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hackmaster_gen_coinage_range_dash"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_range_label"
        app:layout_constraintTop_toTopOf="@+id/hackmaster_gen_coinage_range_dash"
        android:inputType="numberDecimal"
        android:hint="Maximum"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/hackmaster_gen_coinage_range_gp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/hackmaster_gen_coinage_range_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/hackmaster_gen_coinage_range_max"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_range_label"
        app:layout_constraintTop_toTopOf="@+id/hackmaster_gen_coinage_range_max" />

    <TextView
        android:id="@+id/hackmaster_gen_coinage_allowed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Include these denominations:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_range_gp" />

    <CheckBox
        android:id="@+id/hackmaster_gen_coinage_allowed_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintEnd_toStartOf="@+id/hackmaster_gen_coinage_allowed_sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_allowed_label"
        android:text="cp"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/hackmaster_gen_coinage_allowed_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintEnd_toStartOf="@+id/hackmaster_gen_coinage_allowed_ep"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hackmaster_gen_coinage_allowed_cp"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_allowed_label"
        android:text="sp"
        android:textSize="12sp"/>

    <CheckBox
        android:id="@+id/hackmaster_gen_coinage_allowed_ep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintEnd_toStartOf="@+id/hackmaster_gen_coinage_allowed_gp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hackmaster_gen_coinage_allowed_sp"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_allowed_label"
        android:text="ep"
        android:textSize="12sp"/>

    <CheckBox
        android:id="@+id/hackmaster_gen_coinage_allowed_gp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintEnd_toStartOf="@+id/hackmaster_gen_coinage_allowed_hsp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hackmaster_gen_coinage_allowed_ep"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_allowed_label"
        android:text="gp"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/hackmaster_gen_coinage_allowed_hsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintEnd_toStartOf="@+id/hackmaster_gen_coinage_allowed_pp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hackmaster_gen_coinage_allowed_gp"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_allowed_label"
        android:text="hsp"
        android:textSize="12sp"/>

    <CheckBox
        android:id="@+id/hackmaster_gen_coinage_allowed_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hackmaster_gen_coinage_allowed_hsp"
        app:layout_constraintTop_toBottomOf="@id/hackmaster_gen_coinage_allowed_label"
        android:text="pp"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>