<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hackmaster_gen_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAllCaps="true"
        android:text="@string/hoard_name_label"/>

    <EditText
        android:id="@+id/hackmaster_gen_name_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:maxLines="1"
        android:hint="@string/hoard_name_entry_hint"/>

    <TextView
        android:id="@+id/hackmaster_gen_method_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textAllCaps="true"
        android:text="@string/hoard_gen_label"/>

    <RadioGroup
        android:id="@+id/hackmaster_gen_method_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RadioButton
            android:id="@+id/hackmaster_gen_method_letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:textAllCaps="true"
            android:checked="true"
            android:text="@string/gen_method_letter_label"/>

        <RadioButton
            android:id="@+id/hackmaster_gen_method_specific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:textAllCaps="true"
            android:text="@string/gen_method_specific_label"/>

    </RadioGroup>

    <ViewAnimator
        android:id="@+id/hackmaster_gen_view_animator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_marginVertical="8dp"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/hackmaster_gen_lair_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/exlist_bottom_margin"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Top of cardview (always visible) -->
                    <RelativeLayout
                        android:id="@+id/hackmaster_gen_lair_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="?attr/colorPrimary">

                        <ImageView
                            android:id="@+id/hackmaster_gen_lair_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/clipart_indicator_vector_icon"
                            app:tint="?attr/colorOnPrimary" />

                        <TextView
                            style="@style/letter_cardview_header"
                            android:layout_alignTop="@id/hackmaster_gen_lair_indicator"
                            android:layout_alignBottom="@id/hackmaster_gen_lair_indicator"
                            android:layout_toEndOf="@id/hackmaster_gen_lair_indicator"
                            android:text="@string/lair_treasures_cardview_header" />

                        <ImageView
                            app:tint="?attr/colorOnPrimary"
                            android:src="@drawable/clipart_fortress_vector_icon"
                            style="@style/cardview_letter_header_icon" />

                    </RelativeLayout>

                    <!-- Expandable portion of cardview -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hackmaster_gen_lair_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hackmaster_gen_small_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/exlist_bottom_margin"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Top of cardview (always visible) -->
                    <RelativeLayout
                        android:id="@+id/hackmaster_gen_small_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="?attr/colorPrimary">

                        <ImageView
                            android:id="@+id/hackmaster_gen_small_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/clipart_indicator_vector_icon"
                            app:tint="?attr/colorOnPrimary" />

                        <TextView
                            style="@style/letter_cardview_header"
                            android:layout_alignTop="@id/hackmaster_gen_small_indicator"
                            android:layout_alignBottom="@id/hackmaster_gen_small_indicator"
                            android:layout_toEndOf="@id/hackmaster_gen_small_indicator"
                            android:text="@string/small_treasures_cardview_header" />

                        <ImageView
                            app:tint="?attr/colorOnPrimary"
                            android:src="@drawable/clipart_orc_vector_icon"
                            style="@style/cardview_letter_header_icon" />

                    </RelativeLayout>

                    <!-- Expandable portion of cardview -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hackmaster_gen_small_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/hackmaster_gen_specific_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ExpandableListView
                android:id="@+id/hackmaster_gen_coinage_exlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indicatorLeft="0dp"
                android:childDivider="@color/gray"
                android:background="?attr/colorSecondary"/>

        </LinearLayout>-->
        
    </ViewAnimator>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hackmaster_gen_reset_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:text="Reset"/>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/hackmaster_gen_generate_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:text="Generate"/>

    </LinearLayout>

</LinearLayout>