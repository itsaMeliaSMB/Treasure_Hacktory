<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/menu_label_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select option:"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_hackmaster"
        style="@style/main_button_style"
        android:text="Hackmaster 4e"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/menu_three_point_five"
        app:layout_constraintTop_toBottomOf="@id/menu_label_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/menu_three_point_five"
        style="@style/main_button_style"
        android:text="D &amp; D 3.5e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/menu_hackmaster"
        app:layout_constraintStart_toStartOf="@+id/menu_hackmaster"
        app:layout_constraintTop_toBottomOf="@+id/menu_hackmaster" />

</androidx.constraintlayout.widget.ConstraintLayout>